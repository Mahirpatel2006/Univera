{
  "name": "univera",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "install-all": "npm install && npm run setup-husky",
    "setup-husky": "npx husky install && [ ! -f .husky/pre-commit ] && npx husky add .husky/pre-commit 'npx lint-staged' || echo 'pre-commit hook already exists' && [ ! -f .husky/commit-msg ] && npx husky add .husky/commit-msg 'npx --no-install commitlint --edit \"$1\"' || echo 'commit-msg hook already exists'",
    "dev": "next dev",
    "server": "node server.js",
    "build": "prisma generate && next build",
    "start": "next start",
    "prepare": "husky install",
    "lint": "eslint src --ext ts,tsx,js,jsx --report-unused-disable-directives ",
    "lint:fix": "eslint src --ext js,jsx,ts,tsx --fix",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,html}' package.json"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.3.1",
    "@hookform/resolvers": "^3.9.1",
    "@prisma/client": "^5.22.0",
    "@radix-ui/react-dialog": "^1.1.3",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-tooltip": "^1.1.4",
    "@tanstack/react-query": "^5.62.8",
    "@tanstack/react-table": "^8.20.5",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "express": "^4.21.2",
    "http": "^0.0.1-security",
    "i18next": "^24.0.5",
    "localtunnel": "^2.0.2",
    "lucide-react": "^0.456.0",
    "next": "^15.0.4",
    "react": "18.2.0",
    "react-calendar": "^5.1.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.54.0",
    "react-hot-toast": "^2.4.1",
    "react-i18next": "^15.1.3",
    "react-icons": "^5.3.0",
    "react-loading-skeleton": "^3.5.0",
    "react-router-dom": "^7.0.2",
    "react-select": "^5.9.0",
    "recharts": "^2.14.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "svix": "^1.40.0",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/socket.io": "^3.0.1",
    "eslint": "^8",
    "eslint-config-next": "15.0.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "prisma": "^5.22.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.7.2"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm run format"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "npm run lint",
      "eslint --fix",
      "npm run format"
    ]
  }
}
